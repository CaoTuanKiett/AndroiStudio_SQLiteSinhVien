<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/back5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <Button
        android:id="@+id/btn_thoat"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_thoat"
        android:text="THOÁT"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:gravity="center"
        android:text="CẬP NHẬT SINH VIÊN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Họ tên "
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Giới tính"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Email "
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="SĐT "
                android:textColor="@color/black"
                android:textSize="23dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_hoTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Họ tên"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <RadioGroup
                android:padding="10dp"
                android:id="@+id/rg_gioiTinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Nam"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <RadioButton
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rb_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

            </RadioGroup>

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Email"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edt_SDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Số điện thoai"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/btn_luu"
            android:background="@drawable/bg_btn_luu"
            android:text="LƯU"
            android:layout_width="110dp"
            android:layout_height="wrap_content"/>



        <Button
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/btn_xoa"
            android:background="@drawable/bg_btn_xoa"
            android:text="XÓA"
            android:layout_width="110dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>